<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    >
<RelativeLayout
  	android:id="@+id/headercontainer"
  	android:layout_height="44dip"
  	android:layout_width="fill_parent">
  	<ImageView
  	android:src="@drawable/header"
  	android:layout_width="320dip"
  	android:layout_height="44dip"
  	android:scaleType="centerInside"
  	android:layout_centerInParent="true"
  	/>
  	<TextView
	android:id="@+id/categoryname"
	android:text=""
	android:textSize="20sp"
	android:textColor="#FF000000"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textStyle="bold"
	android:layout_centerInParent="true"
	/>
  	
  </RelativeLayout>
<ImageView
android:id="@+id/shadowupper"
android:src="@drawable/shaddow_upper"
android:layout_width="fill_parent"
android:layout_height="6dip"
android:layout_below="@id/headercontainer"
android:scaleType="fitXY"
/>
<RelativeLayout
android:id="@+id/questionsheader"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@id/headercontainer"
android:layout_centerHorizontal="true">
<ImageView
	android:src="@drawable/scoreboard"
	android:layout_width="320dip"
	android:layout_height="52dip"
	android:layout_centerInParent="true"
	android:scaleType="fitXY"
/>
<RelativeLayout
	android:id="@+id/leftblock"
	android:layout_width="106dip"
	android:layout_height="52dip"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft = "true">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center_vertical">
		<ImageView
			android:src="@drawable/scoreicon_right"
			android:layout_width="44dip"
			android:layout_height="35dip"
			android:layout_marginRight="5dip"
			android:scaleType="fitXY"
		/>
		<TextView
		android:id="@+id/correctanswers"
		android:text="0"
		android:textSize="16sp"
		android:textColor="#FF000000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:layout_centerInParent="true"
		/>
		</LinearLayout>
</RelativeLayout>
<RelativeLayout
	android:id="@+id/rightblock"
	android:layout_width="106dip"
	android:layout_height="52dip"
	android:layout_centerVertical="true"
	android:layout_alignParentRight = "true">
	<LinearLayout
android:id="@+id/quizinfotext"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true">

<TextView
android:id="@+id/questionscovered"
android:text="0"
android:textSize="16sp"
android:textColor="#FF000000"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
/>

<TextView
android:id="@+id/of"
android:text=" of "
android:textSize="16sp"
android:textColor="#FF000000"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
/>
<TextView
android:id="@+id/totalquestions"
android:text="1"
android:textSize="16sp"
android:textColor="#FF000000"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
/>
</LinearLayout>
</RelativeLayout>
<RelativeLayout
	android:id="@+id/centerblock"
	android:layout_width="106dip"
	android:layout_height="52dip"
	android:layout_centerInParent = "true">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center_vertical">
		<ImageView
			android:src="@drawable/scoreicon_wrong"
			android:layout_width="44dip"
			android:layout_height="35dip"
			android:layout_marginRight="5dip"
			android:scaleType="fitXY"
		/>
		<TextView
		android:id="@+id/wronganswers"
		android:text="0"
		android:textSize="16sp"
		android:textColor="#FF000000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		
		/>
	</LinearLayout>
	
</RelativeLayout>
<ImageView
	android:src="@drawable/scoredivider"
	android:layout_width="1dip"
	android:layout_height="40dip"
	android:layout_centerVertical="true"
	android:layout_toRightOf="@id/leftblock"
	android:scaleType="fitXY"
/>
<ImageView
	android:src="@drawable/scoredivider"
	android:layout_width="1dip"
	android:layout_height="40dip"
	android:layout_centerVertical="true"
	android:layout_toLeftOf="@id/rightblock"
	android:scaleType="fitXY"
/>


</RelativeLayout>

<RelativeLayout
android:id="@+id/footerContainer"
android:layout_width="fill_parent"
android:layout_height="60dip"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true">
<ImageView
android:src="@drawable/footer"

android:layout_width="320dip"
android:layout_height="65dip"
android:scaleType="fitXY"
android:layout_centerInParent="true"/>
<ImageView
android:id="@+id/centerspace"
android:layout_width="30dip"
android:layout_height="60dip"
android:layout_centerInParent="true">
</ImageView>

<Button
android:id="@+id/getMoreInfo"
android:layout_width="wrap_content"
android:layout_height="50dip"
android:text="Get More Info"
android:layout_centerVertical="true"
android:visibility="gone"
android:layout_toLeftOf="@id/centerspace">
</Button>
<Button
android:id="@+id/confirmButton"
android:layout_width="wrap_content"
android:layout_height="50dip"
android:text="Confirm Answer"
android:layout_centerInParent="true"
android:visibility="gone"
>
</Button>
<Button
android:id="@+id/gotoNext"
android:layout_width="wrap_content"
android:layout_height="50dip"
android:text="Next Question"
android:layout_centerVertical="true"
android:visibility="gone"
android:layout_toRightOf="@id/centerspace">
</Button>
<Button
android:id="@+id/finish"
android:layout_width="wrap_content"
android:layout_height="50dip"
android:text="Check Results"
android:layout_centerVertical="true"
android:visibility="gone"
android:layout_toRightOf="@id/centerspace">
</Button>
</RelativeLayout>
<ImageView
android:src="@drawable/shaddow_lowerr"
android:layout_width="fill_parent"
android:layout_height="6dip"
android:layout_above="@id/footerContainer"
android:scaleType="fitXY"
/>
<ListView
	android:id="@+id/answers"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:cacheColorHint="#00000000"
	android:layout_above="@id/footerContainer"
	android:divider="#00FFFFFF"
	android:listSelector="@drawable/selectionbar">
</ListView>

<ImageView
android:id="@+id/shadowlower"
android:src="@drawable/shaddow_lowerr"
android:layout_width="fill_parent"
android:layout_height="6dip"
android:layout_above="@id/answers"
android:scaleType="fitXY"
/>
<ImageView
android:id="@+id/smallquestionicon"
android:src="@drawable/q_icon"
android:layout_width="77dip"
android:layout_height="67dip"
android:layout_marginLeft = "5dip"
android:layout_marginTop = "5dip"
android:layout_below="@id/questionsheader"

android:scaleType="fitXY"
/>
<ScrollView
android:id="@+id/questionTextScroller"
android:layout_height="fill_parent"
android:layout_width="fill_parent"
android:layout_below="@id/questionsheader"
android:layout_above="@id/shadowlower"
android:layout_toRightOf="@id/smallquestionicon"
android:layout_marginLeft="5dip"
android:scrollbarAlwaysDrawVerticalTrack="true">
<TextView
android:id="@+id/questionText"
android:layout_height="wrap_content"
android:layout_width="fill_parent"
android:textSize="17sp"
android:textColor="#FF000000"
android:text=""
>
</TextView>
</ScrollView>
</RelativeLayout>
