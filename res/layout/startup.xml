<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:pj="http://schemas.android.com/apk/res/com.appworldonline.android.indiaquiz"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFFFF">
  
  <RelativeLayout
  	android:id="@+id/footercontrol"
  	android:layout_width="fill_parent"
  	android:layout_height="65dip"
  	android:layout_alignParentBottom="true">
  	<ImageView
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:scaleType="fitXY"
  		android:src="@drawable/footer">
  	</ImageView>
  	<com.appworldonline.android.indiaquiz.uicomponents.CustomImageButton
  		android:id="@+id/start_button"
  		android:layout_width="45dip"
  		android:layout_height="45dip"
  		pj:res_normal="@drawable/button_go"
  		pj:res_selected="@drawable/button__active_go"
  		android:layout_centerInParent="true"
  		/>
  </RelativeLayout>
  <ImageView
  	android:src="@drawable/shaddow_lowerr"
  	android:layout_width="fill_parent"
  	android:layout_height="5dip"
  	android:scaleType="fitXY"
  	android:layout_above="@id/footercontrol"
  	/>
  	<TextView
  	android:id="@+id/companyurl"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="www.appworldonline.com"
  	android:textStyle="normal"
  	android:textSize="14sp"
  	android:textColor="#FF000000"
  	android:layout_marginTop = "5dip"
  	android:layout_marginBottom = "15dip"
  	android:layout_centerHorizontal="true"
  	android:linksClickable="true"
  	android:autoLink="web"
  	android:layout_above="@id/footercontrol">
  </TextView>
  	<TextView
  	android:id="@+id/companyname"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="App World Online"
  	android:textStyle="bold"
  	android:textSize="18sp"
  	android:textColor="#FF000000"
  	android:layout_marginTop = "5dip"
  	android:layout_marginBottom = "0dip"
  	android:layout_centerHorizontal="true"
  	android:layout_above="@id/companyurl">
  </TextView>
  <TextView
  	android:id="@+id/poweredby"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="Powered by"
  	android:textStyle="bold"
  	android:textSize="16sp"
  	android:textColor="#FF000000"
  	android:layout_marginTop = "0dip"
  	android:layout_marginBottom = "0dip"
  	android:layout_centerHorizontal="true"
  	android:layout_above="@id/companyname">
  </TextView>
  <RelativeLayout
  	android:id="@+id/headercontainer"
  	android:layout_height="44dip"
  	android:layout_width="fill_parent">
  	<ImageView
  	android:src="@drawable/header"
  	android:layout_width="320dip"
  	android:layout_height="44dip"
  	android:scaleType="centerInside"
  	android:layout_centerInParent="true"
  	/>
  	<ImageView
  	android:src="@drawable/title"
  	android:layout_width="280dip"
  	android:layout_height="46dip"
  	android:scaleType="centerInside"
  	android:layout_centerInParent="true"
  	/>
  </RelativeLayout>
  <ImageView
  	android:src="@drawable/shaddow_upper"
  	android:layout_width="fill_parent"
  	android:layout_height="5dip"
  	android:scaleType="fitXY"
  	android:layout_below="@id/headercontainer"
  	/>
  <RelativeLayout
  	android:id="@+id/centralarea"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_below="@id/headercontainer"
  	android:layout_above="@id/poweredby"
  	>
  	<ImageView
  	android:id="@+id/icon"
  	android:src="@drawable/qm"
  	android:layout_width="180dip"
  	android:layout_height="200dip"
  	android:scaleType="centerInside"
  	android:layout_centerInParent="true"
  	/>
  </RelativeLayout>
  
  
</RelativeLayout>
